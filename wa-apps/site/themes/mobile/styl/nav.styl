// Stylus variables

.content-nav-wrapper
    margin: 0.5em 0
    padding: 0

    border: 1px solid rgba(0,0,0,0.1)

    background #fff
    overflow hidden

    &:first-child
        margin-top: 0

    &.transparent
        $box-shadow(none)
        background transparent
        border: 0
        .nav-group
            .nav-list
                .nav-item
                    a
                        background: transparent

                    &.back-nav-item
                        a
                            background: transparent

    &.show-all
        .nav-group
            .nav-list
                .nav-list
                    display block

    .nav-group
        border-top: 1px solid rgba(0,0,0,0.1)

        &:first-child
            border-top: 0;

        .nav-header
            color: $color-black

        ul
        .nav-list
            margin: 0
            list-style none

            ul
            .nav-list
                display none

                li
                .nav-item

                    &:first-child
                        border-width: 1px 0 0

                    a
                        padding-left: 2em

                        &:before
                            position absolute
                            top: 0;
                            left: 0;
                            content: ""
                            display block
                            width: 2em
                            height: 100%
                            background transparent url("img/icons/arrow-child.png") 50% no-repeat
                            background-size 0.9em

            li
            .nav-item
                display block
                width: 100%
                box-sizing border-box

                margin: 0
                padding: 0
                border: solid rgba(0,0,0,0.1)
                border-width 1px 0 0

                &:first-child
                    border-width 0

                a
                    position relative
                    display block
                    padding: 0.8em 2em 0.8em 0.8em
                    text-decoration none

                    &:after
                        position absolute
                        top: 0;
                        right: 0;
                        content: ""
                        display block
                        width: 2em
                        height: 100%
                        background transparent url("img/icons/arrow-right.png") 50% no-repeat
                        background-size 0.6em

                &.back-nav-item
                    a
                        padding-left: 2em
                        background: #f7f7f7

                        &:before
                            display none

                        &:after
                            right: auto
                            left: 0
                            background-image url("img/icons/arrow-left.png")

                &.current-nav-item
                    a
                        background: #f3f3f3;

                        &:after
                            display none